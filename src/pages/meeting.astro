        Cal("inline", {
          elementOrSelector: "#my-cal-inline",
          calLink: "alpen/meeting-with-alpen",
          layout: "month_view",
        });
        Cal("ui", {
          styles: { branding: { brandColor: "#daa520" } },
          hideEventTypeDetails: false,
          layout: "month_view",
