      // CHANGE LANGUAGE

      // Current language key
      let currentLang = "el";

      const lang = {
        en: {
          nav1: "Χαρτοφυλάκιο",
          greeting: "Effortlessly",
          description: "This is an example of a multi-language website.",
        },
        el: {
          nav1: "Χαρτοφυλάκιο",
          greeting: "Δκιαολε",
          description: "Ceci est un exemple de site web multilingue.",
        },
      };

      function toggleLanguage() {
        // Toggle the current language
        currentLang = currentLang === "en" ? "el" : "en";

        // Update texts on the page
        document.getElementById("greeting").textContent =
          lang[currentLang].greeting;
        document.getElementById("description").textContent =
          lang[currentLang].description;
        document.getElementById("nav1").textContent = lang[currentLang].nav1;

        // Update button text to show the language that can be switched to next
        document.getElementById("langButton").textContent =
          lang[currentLang].button;
      }

      // Set initial language and button label
      document.addEventListener("DOMContentLoaded", function () {
        toggleLanguage();
      });
    </script>
