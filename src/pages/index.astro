---
import srcImage from "../assets/Coding.webp";
import Images from "../assets/image 119.svg";
import { Image } from "astro:assets";
// Head Layout
import MainLayout from "../layouts/MainLayouts.astro";
import MainHead from "../layouts/MainHead.astro";
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<html lang="en">
  <MainHead>
    <style>
      /* <============FIRST SECTION OF WEBSITE ===============> */

      .first__section {
        background-image: url(../assets/pexels-pixabay-256643.jpg);
        background-size: 180%;
        height: 100vh;
      }

      .container {
        height: 90vh;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding-bottom: 2.5rem;
      }

      .container__heading {
        display: block;
        font-size: 6rem;
        width: 22ch;
        line-height: 1;
        font-family: "Roboto", sans-serif;
        color: white;
        filter: drop-shadow(1px 1px 20px #000000);
      }

      .extra__main-heading {
        color: white;
        font-family: "Roboto", sans-serif;
        filter: drop-shadow(1px 1px 20px #000000);
      }

      .strong__text1 {
        color: #f3e5ab;
      }

      .container__paragraph {
        font-size: 3rem;
        font-family: "Great Vibes", cursive;
        text-align: center;
        padding-bottom: 1rem;
        color: white;
        filter: drop-shadow(0px 0px 6px #000000);
      }

      .container__btn {
        font-family: "Roboto", sans-serif;
        font-size: larger;
        border: none;
        border-radius: 0.5rem;
        cursor: pointer;
        padding: 1rem 2rem;
        font-weight: 700;
        color: black;
        background-color: #f6f9fc;
        transition: 1s ease;
      }

      .container__btn:hover {
        scale: 1.05;
      }

      /* SECOND SECTION */

      .second-section {
        background: rgb(255, 255, 255);
        background: linear-gradient(
          0deg,
          rgba(0, 0, 0, 0.7945553221288515) 100% rgba(158, 158, 158, 1) 50%,
          rgba(255, 255, 255, 1) 0%
        );
        height: 220vh;
      }

      .height-of-text {
        width: 49%;
        height: 30vh;
        display: flex;
        justify-content: right;
        align-items: end;
      }

      .text-top-right {
        font-family: "Roboto", sans-serif;
        width: 55ch;
        font-size: 1.2rem;
      }

      .p2 {
        color: #86868b;
        font-weight: 500;
      }

      .p1 {
        color: #daa520;
        font-weight: 900;
      }

      strong {
        color: grey;
      }

      .main {
        display: flex;
        justify-content: center;
        gap: 3rem;
        padding-top: 5rem;
      }

      .boxes {
        height: 750px;
        width: 600px;
        background-color: white;
        padding: 6px;
        border-radius: 0.5rem;
        box-shadow: 1px 33px 58px -8px rgba(56, 56, 56, 0.75);
        -webkit-box-shadow: 1px 33px 58px -17px rgba(56, 56, 56, 0.75);
        -moz-box-shadow: 1px 33px 58px -17px rgba(56, 56, 56, 0.75);
        font-family: "Roboto", sans-serif;
      }

      .box1,
      .box2,
      .box3,
      .box4 {
        transition: 0.5s ease;
      }

      .box1:hover,
      .box2:hover,
      .box3:hover,
      .box4:hover {
        transform: scale(1.02);
      }

      .extra-left {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 180vh;
      }

      .grey-box-inside {
        height: 400px;
        width: 100%;
        background-color: #f5f5f5;
        border-radius: 0.5rem;
      }

      .greybox1 {
        background-image: url(../assets/Communication.webp);
        background-size: cover;
      }

      .greybox2 {
        background-image: url(../assets/Coding.webp);
        background-size: cover;
        background-position: 25%;
      }

      .greybox3 {
        background-image: url(../assets/SEO.webp);
        background-size: cover;
        background-position: 50%;
      }
      .greybox4 {
        background-image: url(../assets/cameras.webp);
        background-size: cover;
        background-position: 50%;
      }

      .box1,
      .box3 {
        margin-bottom: 3rem;
      }

      .smaller-grey-box-inside {
        margin: 0.5rem 0;
        height: 50px;
        width: fit-content;
        background-color: #f5f5f5;
        border-radius: 0.5rem;
        display: flex;
        padding-left: 1rem;
        padding-right: 1rem;
        align-items: center;
        gap: 0.3rem;
      }

      .under__grey-box {
        padding: 20px;
      }

      .icons__inside-boxes {
        fill: black;
        display: inline-block;
      }

      .text__next-to-div {
        font-weight: 500;
      }

      /* <================ FURTHER INFO SECTION ====================> */

      .further__info-main-div {
        background-color: #daa520;
        width: 100%;
        height: 40vh;
        display: flex;
        align-items: center;
        font-family: "Roboto", sans-serif;
        margin: 3rem 0rem;
        margin-bottom: 5rem;
      }

      .further__info-heading1 {
        color: white;
      }

      .further__info-h1 {
        font-size: 3rem;
        color: #333333;
        line-height: 1;
      }

      .further__info-btn {
        border: none;
        background-color: #f6f9fc;
        color: black;
        font-weight: 700;
        margin-top: 1rem;
        padding: 0.5rem 2rem;
        border-radius: 0.5rem;
        cursor: pointer;
      }

      .further__info-right {
        position: relative;
        height: 100%;
        width: 40%;
        display: flex;
        justify-content: center;
      }

      .further__info-left {
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
      }

      .testing-image {
        height: 100%;
        z-index: 10;
      }

      .avatar__shadow {
        width: 400px;
        height: 300px;
        background-color: #dab861;
        border-radius: 50%;
        position: absolute;
        top: 3rem;
        left: 0;
        right: 0;
        margin-inline: auto;
        filter: blur(45px);
      }

      /* <================= PHOTOGRAPHY SECTION =================> */

      .photography__main-div {
        height: 60vh;
        width: 95%;
        margin: 0 auto;
        background-image: url(../assets/pexels-abhishek-saini-1415858-2929412.jpg);
        border-radius: 0.5rem;
        background-size: 130%;
        background-position: 0% 60%;
        margin-bottom: 5rem;
      }

      .photography__left-div {
        width: 30%;
        padding: 2rem;
        color: white;
        font-family: "Roboto", sans-serif;
        font-size: larger;
      }

      .photography__btn {
        background-color: white;
        color: black;
        border: none;
        border-radius: 0.5rem;
        margin-top: 3rem;
        padding: 0.5rem 2rem;
        cursor: pointer;
      }

      /* <================= FAQS SECTION =================> */

      .section__faq {
        font-family: "Roboto", sans-serif;
        display: flex;
        padding: 5rem 0;
        margin: 0 auto;
        margin-bottom: 5rem;
      }

      .section__faq__left-div {
        width: 50%;
        padding: 0 8rem;
        display: flex;
        justify-content: center;
      }

      .title {
        font-size: 3rem;
        margin: 2rem 0rem 1rem 0rem;
      }

      .faq__inform {
        color: #daa520;
        font-size: xx-large;
        font-weight: 700;
        padding-bottom: 1rem;
      }

      .faq {
        max-width: 700px;
        margin-top: 2rem;
        padding-bottom: 1rem;
        cursor: pointer;
        border-bottom: #000000 solid 1px;
      }

      .question {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .question h3 {
        font-size: 1.8rem;
      }

      .answer {
        max-height: 0;
        overflow: hidden;
        /* transition: 1.4s ease; */
      }

      .answer p {
        padding-top: 1rem;
        line-height: 1.6;
        font-size: 1.4rem;
      }

      .faq.active .answer {
        max-height: 300px;
        animation: fadeInText 1s ease-in-out;
      }

      .question:hover {
        color: #daa520;
      }

      .faq.active svg {
        transform: rotate(-180deg);
      }

      svg {
        fill: black;
        transition: transform 0.2s ease-in;
      }

      .faq1.faq.active .answer {
        max-height: 160px;
        animation: fadeInText 1s ease-in-out;
      }

      .faq2.faq.active .answer {
        max-height: 160px;
        animation: fadeInText 1s ease-in-out;
      }

      .faq3.faq.active .answer {
        max-height: 160px;
        animation: fadeInText 1s ease-in-out;
      }

      .faq4.faq.active .answer {
        max-height: 230px;
        animation: fadeInText 1s ease-in-out;
      }

      .faq5.faq.active .answer {
        max-height: 120px;
        animation: fadeInText 1s ease-in-out;
      }

      /* JAVASCRIPT FADE IN ANIMATION  */

      .hidden {
        opacity: 0;
        transition: all 1s ease;
        transform: translateY(15px);
      }

      .lefting {
        transition: all 1s ease;
        transform: translateX(-90%);
      }

      .fade__In {
        transition: all 3s ease-in;
        opacity: 0;
      }

      .show {
        opacity: 1;
        transform: translateY(0px);
        transform: translateX(0px);
      }
    </style>
  </MainHead>

